<%= form_with model: @pet do |f| %>
  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :species %>
    <%= f.select :species, Pet::SPECIES, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :found_on %>
    <%= f.date_field :found_on, class: 'form-control' %>
  </div>
  <%= f.submit %>
<% end %>
